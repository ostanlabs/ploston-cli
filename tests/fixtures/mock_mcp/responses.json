{
  "tools/list": {
    "tools": [
      {
        "name": "echo",
        "description": "Echo a message back",
        "inputSchema": {
          "type": "object",
          "properties": {
            "message": {"type": "string", "description": "Message to echo"}
          },
          "required": ["message"]
        }
      },
      {
        "name": "firecrawl_scrape",
        "description": "Scrape content from a URL",
        "inputSchema": {
          "type": "object",
          "properties": {
            "url": {"type": "string", "description": "URL to scrape"}
          },
          "required": ["url"]
        }
      },
      {
        "name": "filesystem_write_file",
        "description": "Write content to a file",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {"type": "string", "description": "File path"},
            "content": {"type": "string", "description": "Content to write"}
          },
          "required": ["path", "content"]
        }
      },
      {
        "name": "brave_search",
        "description": "Search the web using Brave Search",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {"type": "string", "description": "Search query"}
          },
          "required": ["query"]
        }
      },
      {
        "name": "workflow:echo-test",
        "description": "Simple echo workflow for testing",
        "inputSchema": {
          "type": "object",
          "properties": {
            "message": {"type": "string", "description": "Message to echo"}
          },
          "required": ["message"]
        }
      },
      {
        "name": "workflow:scrape-and-save",
        "description": "Scrape a URL and save content to filesystem",
        "inputSchema": {
          "type": "object",
          "properties": {
            "url": {"type": "string", "description": "URL to scrape"},
            "output_path": {"type": "string", "description": "Path to save content"}
          },
          "required": ["url", "output_path"]
        }
      },
      {
        "name": "workflow:multi-step",
        "description": "Multi-step workflow with dependencies",
        "inputSchema": {
          "type": "object",
          "properties": {
            "search_query": {"type": "string", "description": "Search query"},
            "output_dir": {"type": "string", "description": "Output directory"}
          },
          "required": ["search_query"]
        }
      }
    ]
  },
